# Application
APP_PORT=3000
NODE_ENV=development
JWT_SECRET=change-this-to-a-random-secure-key
JWT_EXPIRES_IN=7d

# Database
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=appuser
DB_PASSWORD=appuser_password
DB_DATABASE=todo_app

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# MongoDB
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_DB=todo_logs
MONGO_USER=mongouser
MONGO_PASSWORD=mongopassword
# Root user (used by docker-compose to initialize the DB)
MONGO_ROOT_USER=mongoroot
MONGO_ROOT_PASSWORD=mongoroot_password

# Dedicated application user (created by init script)
MONGO_APP_USER=app_user
MONGO_APP_PASSWORD=app_pass

# Application connection string: logging and MongoService will use this
MONGO_URI=mongodb://${MONGO_APP_USER}:${MONGO_APP_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_DB}?authSource=${MONGO_DB}
MONGO_LOG_LEVEL=info

# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100